/* pages/class/join/index.wxss */

.container {
  min-height: 100vh;
  background-color: #1a1a1a;
  color: #ffffff;
  padding: 30rpx;
}

/* 表单组样式 */
.form-group {
  margin-bottom: 40rpx;
  background-color: #222;
  border-radius: 16rpx;
  padding: 30rpx;
}

.form-header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #888;
}

/* 班级码输入框 */
.code-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #333;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.code-input {
  flex: 1;
  height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.placeholder {
  color: #666;
}

.scan-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scan-icon {
  width: 44rpx;
  height: 44rpx;
}

/* 申请记录列表 */
.application-list {
  margin-top: 20rpx;
}

.application-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #333;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.application-item:last-child {
  margin-bottom: 0;
}

.application-info {
  flex: 1;
}

.class-name {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.teacher-name {
  font-size: 24rpx;
  color: #888;
  display: block;
  margin-bottom: 4rpx;
}

.apply-time {
  font-size: 22rpx;
  color: #666;
}

.application-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  margin-left: 20rpx;
}

.application-status.pending {
  background-color: #2b85e4;
  color: #fff;
}

.application-status.approved {
  background-color: #19be6b;
  color: #fff;
}

.application-status.rejected {
  background-color: #ff4d4f;
  color: #fff;
}

/* 加入按钮 */
.btn-wrapper {
  padding: 40rpx 0;
}

.join-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #2b85e4;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.join-btn[disabled] {
  opacity: 0.5;
  background-color: #2b85e4;
  color: #fff;
}

.join-btn:active {
  opacity: 0.8;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #222;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #333;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #888;
  padding: 0 20rpx;
}

.modal-body {
  padding: 30rpx;
}

.info-item {
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 30rpx;
}

.info-item .label {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 8rpx;
  display: block;
}

.info-item .value {
  font-size: 28rpx;
  color: #fff;
}

.info-item .description {
  font-size: 26rpx;
  color: #888;
  line-height: 1.6;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.confirm-btn:active {
  opacity: 0.8;
}