.container {
  min-height: 100vh;
  background-color: #1a1a1a;
  color: #ffffff;
  padding: 30rpx;
}

/* 卡片通用样式 */
.info-card,
.notice-card,
.schedule-card,
.members-card {
  background-color: #222;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 卡片头部通用样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: 500;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.edit-btn {
  color: #2b85e4;
  font-size: 28rpx;
}

/* 班级信息卡片 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.main-info {
  flex: 1;
  margin-right: 20rpx;
}

.class-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.course-name {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 6rpx;
  display: block;
}

.term {
  font-size: 24rpx;
  color: #666;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #333;
}

.action-btn .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #fff;
}

.action-btn.delete {
  background-color: #ff4d4f22;
}

.action-btn.delete text {
  color: #ff4d4f;
}

.info-list {
  background-color: #333;
  border-radius: 12rpx;
  overflow: hidden;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #222;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #888;
  flex-shrink: 0;
}

.value {
  flex: 1;
  font-size: 28rpx;
}

.value.code {
  color: #2b85e4;
  margin-right: 20rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #2b85e4;
  padding: 6rpx 16rpx;
  background-color: #2b85e422;
  border-radius: 20rpx;
}

.value.description {
  white-space: pre-wrap;
}

/* 公告卡片 */
.notice-content {
  background-color: #333;
  border-radius: 12rpx;
  padding: 20rpx;
}

.notice-time {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.empty-notice {
  text-align: center;
  padding: 40rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 课程表卡片 */
.schedule-list {
  background-color: #333;
  border-radius: 12rpx;
  overflow: hidden;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #222;
}

.schedule-item:last-child {
  border-bottom: none;
}

.time-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.weekday {
  font-size: 28rpx;
  font-weight: 500;
}

.time {
  font-size: 28rpx;
  color: #888;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-info .icon {
  width: 24rpx;
  height: 24rpx;
}

.location-info text {
  font-size: 28rpx;
  color: #888;
}

.empty-schedule {
  text-align: center;
  padding: 40rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 成员管理卡片 */
.count {
  font-size: 28rpx;
  color: #888;
}

.manage-btn {
  font-size: 28rpx;
  color: #2b85e4;
}

.pending-section {
  margin-bottom: 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-header .title {
  font-size: 28rpx;
  color: #888;
}

.member-list {
  background-color: #333;
  border-radius: 12rpx;
  overflow: hidden;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #222;
}

.member-item:last-child {
  border-bottom: none;
}

.member-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  flex: 1;
}

.name {
  font-size: 28rpx;
  margin-bottom: 6rpx;
  display: block;
}

.apply-time,
.join-time {
  font-size: 24rpx;
  color: #888;
}

.member-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  background-color: transparent;
  border: none;
}

.action-btn.reject {
  color: #ff4d4f;
  background-color: #ff4d4f22;
}

.action-btn.approve {
  color: #52c41a;
  background-color: #52c41a22;
}

.action-btn.remove {
  color: #ff4d4f;
  background-color: #ff4d4f22;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #222;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #333;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-body {
  padding: 30rpx;
}

.warning-text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 30rpx;
  display: block;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group .label {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
  display: block;
}

.reason-input,
.notice-input {
  width: 100%;
  min-height: 200rpx;
  background-color: #333;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn.cancel {
  background-color: #333;
  color: #fff;
}

.btn.confirm {
  background-color: #2b85e4;
  color: #fff;
}

.btn.confirm.delete {
  background-color: #ff4d4f;
} 