.container {
  min-height: 100vh;
  background-color: #1a1a1a;
  color: #ffffff;
  padding: 30rpx;
}

/* 表单组样式 */
.form-group {
  margin-bottom: 40rpx;
  background-color: #222;
  border-radius: 16rpx;
  padding: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 80rpx;
  background-color: #333;
  border-radius: 8rpx;
  padding: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #333;
  border-radius: 8rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 选择器样式 */
.picker {
  width: 100%;
  height: 80rpx;
  background-color: #333;
  border-radius: 8rpx;
  padding: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* 上课时间列表 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #888;
}

.add-time {
  color: #2b85e4;
  font-size: 28rpx;
}

.time-list {
  padding: 10rpx 0;
}

.time-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #333;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-info {
  flex: 1;
}

.weekday {
  font-size: 28rpx;
  margin-right: 20rpx;
}

.time {
  font-size: 28rpx;
  color: #888;
  margin-right: 20rpx;
}

.location {
  font-size: 28rpx;
  color: #666;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 32rpx;
  padding: 0 10rpx;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 28rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
  margin-left: -20rpx;
}

/* 按钮样式 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #2b85e4;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}

.delete-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: transparent;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 2rpx solid #ff4d4f;
}

.submit-btn:active,
.delete-btn:active {
  opacity: 0.8;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #222;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #333;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #888;
  padding: 0 20rpx;
}

.modal-body {
  padding: 30rpx;
}

.modal-form-item {
  margin-bottom: 30rpx;
}

.modal-form-item:last-child {
  margin-bottom: 0;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-top: 30rpx;
}

.confirm-btn:active {
  opacity: 0.8;
}

/* 删除确认弹窗 */
.warning-text {
  font-size: 28rpx;
  color: #ff4d4f;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-btn,
.confirm-delete-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.cancel-btn {
  background-color: #333;
  color: #fff;
}

.confirm-delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}

.cancel-btn:active,
.confirm-delete-btn:active {
  opacity: 0.8;
} 