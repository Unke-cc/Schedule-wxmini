.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding: 32rpx;
  box-sizing: border-box;
}

/* Header Styles */
.header {
  margin-bottom: 32rpx;
}

.title-section {
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.search-bar {
  position: relative;
  margin-bottom: 24rpx;
}

.search-bar input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 0 80rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* Filter Tabs */
.filter-section {
  margin-bottom: 24rpx;
  overflow: hidden;
}

.filter-tabs {
  white-space: nowrap;
  padding: 0 0 16rpx;
}

.tab {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  background: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab.active {
  background: #4A90E2;
  color: #fff;
}

.tab:last-child {
  margin-right: 0;
}

/* Task List */
.task-list {
  height: calc(100vh - 340rpx);
}

.task-item {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.task-item:active {
  transform: scale(0.98);
}

.task-status-indicator {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 8rpx;
  border-radius: 4rpx 0 0 4rpx;
  background: #999;
}

.task-item.ongoing .task-status-indicator {
  background: #4A90E2;
}

.task-item.completed .task-status-indicator {
  background: #52c41a;
}

.task-item.expired .task-status-indicator {
  background: #f5222d;
}

.task-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  background: #f6f6f6;
  color: #666;
}

.task-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  opacity: 0.5;
}

/* Progress Bar */
.task-progress {
  margin-top: 24rpx;
}

.progress-bar {
  height: 6rpx;
  background: #f0f0f0;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: #4A90E2;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* Check-in Button */
.check-btn {
  background: #4A90E2;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2);
  transition: all 0.3s ease;
}

.check-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(74, 144, 226, 0.1);
}

/* Loading States */
.loading-more, .no-more {
  text-align: center;
  padding: 32rpx;
}

.loading-spinner {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid #f0f0f0;
  border-top-color: #4A90E2;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-right: 8rpx;
  vertical-align: middle;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-more text,
.no-more text {
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
}

/* Empty State */
.empty-state {
  padding: 64rpx 32rpx;
  text-align: center;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #ccc;
}

/* FAB Button */
.fab-button {
  position: fixed;
  right: 48rpx;
  bottom: 48rpx;
  width: 120rpx;
  height: 120rpx;
  background: #4A90E2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.fab-button:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 8rpx rgba(74, 144, 226, 0.2);
}

.plus {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}

.fab-button.hidden {
  display: none;
}
