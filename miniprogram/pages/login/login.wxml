<view class="container">
  <view class="header">
    <text class="title">课程打卡</text>
  </view>

  <view class="form">
    <view class="form-item">
      <input 
        class="input" 
        type="text" 
        placeholder="请输入用户名" 
        value="{{username}}"
        bindinput="onUsernameInput"
      />
    </view>
    <view class="form-item">
      <input 
        class="input" 
        type="password" 
        placeholder="请输入密码" 
        value="{{password}}"
        bindinput="onPasswordInput"
      />
    </view>
  </view>

  <view class="actions">
    <button 
      class="login-btn {{isLoading ? 'loading' : ''}}" 
      type="primary" 
      bindtap="handleLogin"
      disabled="{{isLoading}}"
    >
      {{isLoading ? '登录中...' : '登录'}}
    </button>
    <view class="register-link" bindtap="navigateToRegister">
      <text>还没有账号？</text>
      <text class="link">立即注册</text>
    </view>
  </view>
</view>
