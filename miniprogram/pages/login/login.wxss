.container {
  min-height: 100vh;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f6f6f6;
}

.header {
  margin-top: 64rpx;
  margin-bottom: 64rpx;
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.form {
  width: 100%;
  margin-bottom: 48rpx;
}

.form-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #333;
}

.actions {
  width: 100%;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #4A90E2;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}

.login-btn.loading {
  opacity: 0.7;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.link {
  color: #4A90E2;
  margin-left: 8rpx;
}
